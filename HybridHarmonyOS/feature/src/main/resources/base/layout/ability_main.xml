<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:padding="16vp"
        ohos:top_margin="16vp"
        ohos:id="$+id:text_helloworld"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        ohos:multiple_lines="true"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text="You are now in the world of HarmonyOS!"
        ohos:text_size="30vp"
        />

    <Button
        ohos:id="$+id:btn_ability_main_goto_another_ability"
        ohos:padding="8vp"
        ohos:text_size="24vp"
        ohos:top_margin="16vp"
        ohos:layout_alignment="center"
        ohos:background_element="#aaaaaa"
        ohos:text="Go to AnotherAbility"
        ohos:height="match_content"
        ohos:width="match_content"/>

    <Button
        ohos:id="$+id:btn_ability_main_goto_main_activity"
        ohos:padding="8vp"
        ohos:text_size="24vp"
        ohos:top_margin="32vp"
        ohos:layout_alignment="center"
        ohos:background_element="#aaaaaa"
        ohos:text="Go to MainActivity"
        ohos:height="match_content"
        ohos:width="match_content"/>

    <Text
        ohos:top_margin="24vp"
        ohos:layout_alignment="center"
        ohos:text_size="18vp"
        ohos:text="Calling Source:"
        ohos:height="match_content"
        ohos:width="match_content"/>

    <Text
        ohos:layout_alignment="center"
        ohos:text_size="24vp"
        ohos:text="Default"
        ohos:id="$+id:t_ability_main_source"
        ohos:height="match_content"
        ohos:width="match_content"/>

    <DirectionalLayout
        ohos:orientation="horizontal"
        ohos:padding="8vp"
        ohos:height="match_content"
        ohos:width="match_parent">

        <Image
            ohos:padding="8vp"
            ohos:id="$+id:i_ability_main_appgallery"
            ohos:scale_mode="stretch"
            ohos:image_src="$media:appgallery"
            ohos:height="80vp"
            ohos:width="80vp"/>

        <Image
            ohos:padding="8vp"
            ohos:id="$+id:i_ability_main_sofascore"
            ohos:scale_mode="stretch"
            ohos:image_src="$media:sofascore"
            ohos:height="80vp"
            ohos:width="80vp"/>

    </DirectionalLayout>

    <Text
        ohos:text_size="16vp"
        ohos:start_padding="16vp"
        ohos:end_padding="16vp"
        ohos:text="Available Devices:"
        ohos:height="match_content"
        ohos:width="match_parent"/>

    <Text
        ohos:text_size="14vp"
        ohos:start_padding="16vp"
        ohos:end_padding="16vp"
        ohos:multiple_lines="true"
        ohos:id="$+id:t_ability_main_device_list"
        ohos:height="match_content"
        ohos:width="match_parent"/>

</DirectionalLayout>