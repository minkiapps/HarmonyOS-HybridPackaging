<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:padding="16vp"
        ohos:top_margin="64vp"
        ohos:id="$+id:text_helloworld"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        ohos:multiple_lines="true"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text="You are now in the world of HarmonyOS!"
        ohos:text_size="30vp"
        />

    <Button
        ohos:id="$+id:btn_ability_another_goto_another_activity"
        ohos:padding="8vp"
        ohos:text_size="24vp"
        ohos:top_margin="32vp"
        ohos:layout_alignment="center"
        ohos:background_element="#aaaaaa"
        ohos:text="Go to AnotherActivity"
        ohos:height="match_content"
        ohos:width="match_content"/>

</DirectionalLayout>